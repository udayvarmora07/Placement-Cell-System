<% if (locals.user) {%>
<div class="container mt-4 col-md-4">
  <div class="row">
    <div class="col-12">
      <div class="btn-group d-flex" role="group" aria-label="Basic example">
        <button
          type="button"
          class="btn btn-secondary flex-fill"
          onclick="location.href='/student/add-student-personal-details'"
        >
          Personal Details
        </button>
        <button
          type="button"
          class="btn btn-primary flex-fill"
          onclick="location.href='/student/add-student-education-details'"
        >
          Education Details
        </button>
        <button
          type="button"
          class="btn btn-secondary flex-fill"
          onclick="location.href='/student/add-student-document-upload'"
        >
          Document Upload
        </button>
      </div>
    </div>
  </div>
  <h4 class="pt-3">Student Education Details</h4>

  <form
    class="row g-3 mt-1 border border-dark rounded p-2"
    style="--bs-border-opacity: 0.5"
    action="/student/createStudentEducationDetails"
    method="POST"
  >
    <h5 class="my-1 text-primary">10th details -></h5>

    <div class="col-12 my-1">
      <label for="school-name" class="form-label">School Name</label>
      <input
        type="text"
        class="form-control"
        placeholder="Enter School name"
        id="tenthSchoolName"
        name="tenthSchoolName"
      />
    </div>

    <div class="col-12">
      <label for="board" class="form-label">Board</label>
      <select class="form-select" id="tenthBoard" name="tenthBoard" required>
        <option selected>Choose...</option>
        <option value="GSEB">GSEB</option>
        <option value="CBSE">CBSE</option>
        <option value="ICSE">ICSE</option>
        <option value="Other">Other</option>
      </select>
    </div>

    <div class="col-12">
      <label for="passing-year" class="form-label">Passing Year</label>
      <select
        class="form-select"
        id="tenthPassingYear"
        name="tenthPassingYear"
        required
      >
        <option selected>Choose...</option>
        <option value="2018">2018</option>
        <option value="2019">2019</option>
        <option value="2020">2020</option>
        <option value="2021">2021</option>
      </select>
    </div>

    <div class="col-12">
      <label for="percentage" class="form-label">Percentage</label>
      <input
        type="number"
        class="form-control"
        placeholder="Enter percentage"
        id="tenthPercentage"
        name="tenthPercentage"
        min="0"
        max="100"
        step="0.01"
        required
      />
    </div>

    <h5 class="my-1 text-primary mt-3">12th details -></h5>

    <div class="col-12">
      <label for="school-name" class="form-label">School Name</label>
      <input
        type="text"
        class="form-control"
        placeholder="Enter School name"
        id="twelfthSchoolName"
        name="twelfthSchoolName"
      />
    </div>

    <div class="col-12">
      <label for="board" class="form-label">Board</label>
      <select
        class="form-select"
        id="twelfthBoard"
        name="twelfthBoard"
        required
      >
        <option selected>Choose...</option>
        <option value="GSEB">GSEB</option>
        <option value="CBSE">CBSE</option>
        <option value="ICSE">ICSE</option>
        <option value="Other">Other</option>
      </select>
    </div>

    <div class="col-12">
      <label for="passing-year" class="form-label">Passing Year</label>
      <select
        class="form-select"
        id="twelfthPassingYear"
        name="twelfthPassingYear"
        required
      >
        <option selected>Choose...</option>
        <option value="2020">2020</option>
        <option value="2021">2021</option>
        <option value="2022">2022</option>
        <option value="2023">2023</option>
      </select>
    </div>

    <div class="col-12">
      <label for="percentage" class="form-label">Percentage</label>
      <input
        type="number"
        class="form-control"
        placeholder="Enter percentage"
        id="twelfthPercentage"
        name="twelfthPercentage"
        min="0"
        max="100"
        step="0.01"
        required
      />
    </div>

    <h5 class="my-1 text-primary mt-3">B.Tech details -></h5>

    <div class="col-12">
      <label for="cgpa" class="form-label">CGPA</label>
      <div class="row">
        <div class="col-md-4">
          <input
            type="number"
            class="form-control mb-3"
            placeholder="Sem-1"
            id="sem1"
            name="sem1"
            min="0"
            max="10"
            step="0.01"
            required
          />
        </div>
        <div class="col-md-4">
          <input
            type="number"
            class="form-control mb-3"
            placeholder="Sem-2"
            id="sem2"
            name="sem2"
            min="0"
            max="10"
            step="0.01"
            required
          />
        </div>
        <div class="col-md-4">
          <input
            type="number"
            class="form-control mb-3"
            placeholder="Sem-3"
            id="sem3"
            name="sem3"
            min="0"
            max="10"
            step="0.01"
            required
          />
        </div>
      </div>
      <div class="row">
        <div class="col-md-4">
          <input
            type="number"
            class="form-control mb-3"
            placeholder="Sem-4"
            id="sem4"
            name="sem4"
            min="0"
            max="10"
            step="0.01"
            required
          />
        </div>
        <div class="col-md-4">
          <input
            type="number"
            class="form-control mb-3"
            placeholder="Sem-5"
            id="sem5"
            name="sem5"
            min="0"
            max="10"
            step="0.01"
            required
          />
        </div>
        <div class="col-md-4">
          <input
            type="number"
            class="form-control mb-3"
            placeholder="Sem-6"
            id="sem6"
            name="sem6"
            min="0"
            max="10"
            step="0.01"
            required
          />
        </div>
      </div>
    </div>

    <div class="col-12">
      <label for="backlogStatus" class="form-label"
        >Do you have any backlog?</label
      >
      <select
        class="form-select"
        id="backlogStatus"
        name="backlogStatus"
        required
      >
        <option selected disabled>Choose...</option>
        <option value="yes">Yes</option>
        <option value="no">No</option>
      </select>
    </div>

    <div class="col-12">
      <div class="d-grid gap-2 d-md-flex justify-content-md-end pe-4">
        <button type="submit" class="btn btn-primary">Save</button>
      </div>
    </div>

    <%} %>
  </form>
</div>
